---
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import "@/styles/global.css";
import "@/styles/utils.css";
import "@/styles/animations.css";
import { Modal } from "@/components/react/Modal";
import BtnFloat from "@/components/BtnFloat.astro";
// import { ClientRouter } from "astro:transitions";

interface Props {
  typePage?: "post" | "legal";
  metaData: {
    metaTitle: string;
    metaDescription: string;
    noIndex?: boolean;
    ogImage?: string;
  };
}

const {
  typePage,
  metaData: { noIndex = true, metaDescription, metaTitle, ogImage = "" },
} = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{metaTitle}</title>

    <!-- FONTS -->
    <link
      rel="preload"
      href="/fonts/BebasNeue-Regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href="/fonts/Inter-Regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href="/fonts/Inter-SemiBold.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />

    <!-- FAVICON -->
    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />

    <!-- Open Graph (Facebook, LinkedIn...) -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={metaTitle} />
    <meta property="og:description" content={metaDescription} />
    <meta property="og:image" content={`${Astro.url.origin}/${ogImage}`} />
    <meta property="og:url" content={Astro.url} />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={metaTitle} />
    <meta name="twitter:description" content={metaDescription} />
    <meta name="twitter:image" content={`${Astro.url.origin}/${ogImage}`} />

    <!-- seo -->
    <link rel="canonical" href={Astro.url} />
    <meta name="description" content={metaDescription} />
    <link rel="sitemap" href="/sitemap-index.xml" />

    <!-- INDEX -->
    {noIndex && <meta name="robots" content="noindex" />}

    <!-- <ClientRouter /> -->
  </head>
  <body class={typePage}>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
    <Modal client:idle />
    <BtnFloat typePage={typePage} />
  </body>
</html>

<script src="@/helpers/handleModal"></script>
