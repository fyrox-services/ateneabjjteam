---
import { Pattern } from "./react/Pattern";

interface Props {
  h1: string;
  tagline: string;
}

const { h1, tagline } = Astro.props;
---

<Pattern type={2}>
  <div class="pattern wrapper hero">
    <h1>{h1}</h1>
    <p>{tagline}</p>
  </div>
</Pattern>

<style>
  .hero {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: center;
  }

  h1 {
    color: var(--primary);
    font-family: var(--ff-heading);
    font-size: var(--fs-4xl);
    text-align: center;
    border-bottom: 1px solid var(--third);
    width: fit-content;
    margin-inline: auto;
    padding-inline: 2rem;
  }

  p {
    text-align: center;
    font-size: var(--fs-md);
  }
</style>
