---
import photo1 from "@/assets/school/black_belt.png";
import photo2 from "@/assets/school/faqs.jpg";
import photo3 from "@/assets/school/girls.jpg";
import photo4 from "@/assets/school/graduation.jpeg";
import photo5 from "@/assets/school/tatami.jpg";
import photo6 from "@/assets/school/rotulo.jpeg";
import { Image } from "astro:assets";

const images = [photo4, photo6, photo3, photo1, photo2, photo5];
---

<ul>
  {
    images.map((img) => {
      return (
        <li>
          <picture>
            <Image src={img} alt={`TODO`} />
          </picture>
        </li>
      );
    })
  }
</ul>

<style>
  ul {
    display: grid;
    /* gap: 0.5rem; */
    margin-top: 5rem;
  }

  picture {
    /* max-width: 15rem; */
    width: 100%;
    height: 100%;
  }

  li {
    /* border-radius: var(--radius); */
    overflow: hidden;
  }

  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* DESKTOP */

  @media (min-width: 1024px) {
    ul {
      grid-template-columns: repeat(5, 1fr);
    }

    li {
      max-height: 35rem;
    }

    li:nth-of-type(1),
    li:nth-of-type(4),
    li:nth-of-type(5) {
      grid-column: span 3;
    }

    li:nth-of-type(2),
    li:nth-of-type(3),
    li:nth-of-type(6) {
      grid-column: span 2;
    }
  }
</style>
