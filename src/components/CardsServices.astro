---
import Plus from "@/components/icons/Plus.astro";
import { Image } from "astro:assets";
import gi from "@/assets/deco/gi.jpg";
import nogi from "@/assets/deco/nogi.jpg";
import kids from "@/assets/deco/kids.jpg";
import Calendar from "@/components/icons/Calendar.astro";
import BtnMainCta from "./BtnMainCta.astro";

const mainClasses = [
  {
    heading: "kimono - gi",
    text: "Lorem ipsum dolor sit, amet consectetur adipisicing elit. Illo,eligendi.",
    img: gi,
    description:
      "Lorem ipsum dolor sit amet consectetur adipisicing elit. Natus, consectetur labore. At hic odit maxime maiores culpa reprehenderit molestiae totam repellendus perferendis, blanditiis sapiente iusto amet, tempore voluptas ipsa exercitationem.",
  },
  {
    heading: "grappling - nogi",
    text: "Lorem ipsum dolor sit, amet consectetur adipisicing elit. Illo,eligendi.",
    img: nogi,
    description:
      "Lorem ipsum dolor sit amet consectetur adipisicing elit. Natus, consectetur labore. At hic odit maxime maiores culpa reprehenderit molestiae totam repellendus perferendis, blanditiis sapiente iusto amet, tempore voluptas ipsa exercitationem.",
  },
  {
    heading: "niños",
    text: "Lorem ipsum dolor sit, amet consectetur adipisicing elit. Illo,eligendi.",
    img: kids,
    description:
      "Lorem ipsum dolor sit amet consectetur adipisicing elit. Natus, consectetur labore. At hic odit maxime maiores culpa reprehenderit molestiae totam repellendus perferendis, blanditiis sapiente iusto amet, tempore voluptas ipsa exercitationem.",
  },
];
---

<ul>
  {
    mainClasses.map(({ heading, text, img, description }) => {
      return (
        <li class="card">
          <div class="card-inner">
            <div class="card-front">
              <picture class="mask">
                <Image src={img} alt={heading} />
              </picture>
              <header>
                <h3>{heading}</h3>
                <p>{text}</p>
                <BtnMainCta class="card-service">
                  ir a una clase de prueba
                </BtnMainCta>
              </header>

              <button class="btn-hours">
                <Calendar size={20} />
                <span>horarios</span>
              </button>

              <button class="btn-more-info">
                <Plus size={20} />
                <span>información</span>
              </button>
            </div>

            <div class="card-back">
              <h3>{heading}</h3>
              <p class="description">{description}</p>
            </div>
          </div>
        </li>
      );
    })
  }
</ul>

<script src="@/helpers/handleCardService"></script>

<style>
  ul {
    display: grid;
    gap: 1rem;
    margin: 5rem 0 0;
    color: var(--white);
  }

  li {
    border-radius: var(--radius);
    height: 70vh;
    max-height: 600px;
    position: relative;
    overflow: hidden;
    transition: transform 0.3s ease;
  }

  li:hover {
    transform: scale(1.02);
  }

  picture {
    position: absolute;
    width: 100%;
    height: 100%;
    left: 0;
    right: 0;
    top: 0;
    display: block;
    z-index: -1;
  }

  .mask::after {
    z-index: 1;
  }

  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  header {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  h3 {
    font-family: var(--ff-heading);
    letter-spacing: 1px;
    left: 0;
    top: 0;
    color: var(--secondary);
    width: 100%;
    text-transform: capitalize;
    font-size: var(--fs-2xl);
    background: linear-gradient(45deg, var(--primary) 5%, var(--secondary) 50%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    color: transparent;
  }

  .card-back h3 {
    background: linear-gradient(45deg, var(--black) 5%, var(--dark-500) 50%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    color: transparent;
  }

  p {
    color: var(--white);
  }

  .card-back p {
    font-size: var(--fs-md);
  }

  .btn-more-info,
  .btn-hours {
    position: absolute;
    bottom: 0;
    right: 0;
    display: flex;
    align-items: center;
    padding: 1rem;
    gap: 0.5rem;
    background-color: transparent;
    border: none;
    text-transform: uppercase;
    color: var(--white);
    font-size: var(--fs-sm);
    transition: color 0.3s ease;
  }

  .btn-hours {
    left: 0;
  }

  .btn-more-info:hover,
  .btn-hours:hover {
    color: var(--secondary);
  }

  .description {
    color: var(--black);
  }

  /* EFECTO FLIP */

  .card {
    perspective: 1000px;
  }

  .card-inner {
    width: 100%;
    height: 100%;
    transition: transform 0.8s;
    transform-style: preserve-3d;
    position: relative;
    box-shadow: var(--shadow);
  }

  .card.flip .card-inner {
    transform: rotateY(180deg);
  }

  .card-front,
  .card-back {
    position: absolute;
    width: 100%;
    height: 100%;
    backface-visibility: hidden;
    padding: 1rem;
  }

  .card-back {
    background: linear-gradient(45deg, var(--white), var(--gray));
    transform: rotateY(180deg);
    display: flex;
    flex-direction: column;
    gap: 1rem;
    cursor: pointer;
  }

  /* DESKTOP */

  @media (min-width: 1024px) {
    ul {
      grid-template-columns: repeat(3, 1fr);
    }
  }
</style>
