---
import { Image } from "astro:assets";
import banner from "@/assets/deco/llave.jpg";
---

<aside>
  <picture id="banner-free-class" class="mask">
    <div class="text">
      <h2>
        <span> comienza a entrenar </span>
        <span> jiu </span>
        <span> jitsu </span>
      </h2>
      <p>reserva ahora una clase de prueba gratis.</p>
    </div>
    <Image class="banner-img" src={banner} alt="TODO" />
  </picture>
</aside>

<style>
  aside {
    display: none;
  }

  .mask::after {
    z-index: 1;
  }

  @media (min-width: 1024px) {
    aside {
      display: block;
    }

    aside > picture {
      position: sticky;
      top: calc(var(--header-height) * 1.25);
      height: 60vh;
      max-height: 400px;
      max-width: 350px;
      overflow: hidden;
      display: flex;
      justify-content: center;
      align-items: center;
      border-radius: var(--radius-m);
      cursor: pointer;
    }

    .text {
      z-index: 2;
      color: var(--white);
      padding: 1rem;
    }

    .text h2 {
      font-family: var(--ff-heading);
      font-size: var(--fs-2xl);
    }

    .text h2 span:nth-child(1) {
      display: block;
    }

    .text h2 span:nth-child(2) {
      color: var(--primary);
    }

    .text h2 span:nth-child(3) {
      color: var(--secondary);
    }

    .text p {
      color: var(--white);
    }

    .banner-img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.3s ease;
      position: absolute;
    }

    aside > picture:hover .banner-img {
      transform: scale(1.2);
    }
  }
</style>
