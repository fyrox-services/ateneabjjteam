---
import { Image } from "astro:assets";
import bgAbove from "@/assets/deco/clase-de-nogi.jpg";
import BtnMainCta from "@/components/BtnMainCta.astro";
import { GLOBAL_DATA } from "@/vars";
---

<section class="mask-1">
  <div class="wrapper box">
    <div class="text">
      <p class="brand">atenea brazilian jiu-jitsu team</p>

      <h1>Escuela de <span>jiu</span> <span>jitsu</span> en Madrid</h1>

      <p>
        Aprende Jiu Jitsu Brasile√±o de calidad, de forma estructurada y
        profesional. <br />
        Reserva una primera clase de prueba gratis.
      </p>

      <BtnMainCta />
    </div>
  </div>
  <Image
    priority
    src={bgAbove}
    widths={[410, 1400]}
    sizes={`(max-width: 1024px) 410px,  1400px`}
    alt={`Academia ${GLOBAL_DATA.SITE_NAME} con alumnos luchando`}
    format="webp"
  />
</section>

<style>
  section {
    min-height: calc(100vh - var(--header-height));
    position: relative;
  }

  img {
    position: absolute;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: -1;
    top: 0;
    left: 0;
  }

  .box {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: inherit;
  }

  .text {
    display: flex;
    justify-content: center;
    flex-direction: column;
    gap: 1rem;
    color: var(--white);
  }

  .brand {
    font-size: var(--fs-md);
    font-family: var(--ff-base-bold);
    text-transform: uppercase;
  }

  h1 {
    font-family: var(--ff-heading);
    font-size: var(--fs-3xl);
  }

  h1 span:nth-child(1) {
    color: var(--primary);
  }

  h1 span:nth-child(2) {
    color: var(--secondary);
  }

  .text p {
    color: var(--white);
    /* max-width: 50ch; */
  }

  /* DESKTOP */

  @media (min-width: 1024px) {
    .text {
      text-align: center;
      align-items: center;
    }

    h1 {
      font-size: var(--fs-4xl);
    }
  }
</style>
