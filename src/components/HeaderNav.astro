<style>
  /* MOBILE */
  @media (max-width: 1024px) {
    nav {
      position: fixed;
      bottom: 0;
      height: 100dvh;
      top: 0;
      width: 100dvw;
      left: 0;
      z-index: -1;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      transform: translateX(100%);
      transition: transform 0.5s ease;
      background: linear-gradient(45deg, var(--black), var(--dark-300));
    }

    nav.active {
      transform: translateX(0);
    }

    img {
      position: absolute;
      z-index: -1;
      height: 100%;
      width: 100%;
      object-fit: cover;
    }

    .menu {
      max-height: 80dvh;
      overflow-y: auto;
      width: 95%;
      margin-inline: auto;
      display: flex;
      flex-direction: column;
      gap: 2rem;
    }

    .menu > li {
      line-height: 1;
    }

    a,
    span {
      font-family: var(--ff-heading);
      color: var(--white);
      font-size: var(--fs-2xl);
    }

    .li-with-sub-menu span {
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .sub-menu {
      display: flex;
      flex-direction: column;
      gap: 1rem;
      padding: 2rem 0 0;
      gap: 2rem;
    }

    .sub-menu a {
      font-size: var(--fs-xl);
      font-family: var(--ff-base-bold);
    }

    .box-arrow {
      display: flex;
      align-items: center;
      transition: transform 0.3s ease;
    }

    .call {
      display: none;
    }
  }

  /* DESKTOP */

  @media (min-width: 1024px) {
    .menu {
      display: flex;
      gap: 1rem;
      align-items: center;
    }

    li {
      cursor: pointer;
      font-size: var(--fs-md);
    }

    .menu > li > a,
    .menu > li > span {
      transition:
        background-color 0.3s ease,
        color 0.3s ease;
    }

    .menu > li:hover > * {
      color: var(--primary);
    }

    .li-with-sub-menu {
      position: relative;
    }

    .li-with-sub-menu > span {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      text-transform: capitalize;
    }

    .box-arrow {
      display: flex;
      align-items: center;
      transition: transform 0.3s ease;
    }

    .li-with-sub-menu:hover .box-arrow {
      transform: rotate(-90deg);
    }

    .sub-menu {
      position: absolute;
      right: 50%;
      transform: translateX(50%) translateY(-20px);
      margin-inline: auto;
      width: max-content;
      top: 100%;
      opacity: 0;
      visibility: hidden;
      padding: 2rem 0.3rem 0.3rem;
      transition:
        transform 0.3s ease,
        opacity 0.3s ease,
        visibility 0.3s ease;
    }

    .sub-menu li {
      background-color: var(--secondary);
      border-bottom: 1px dashed var(--dark-700);
      transition: background-color 0.3s ease;
    }

    .sub-menu li:first-of-type {
      border-radius: var(--radius) var(--radius) 0 0;
    }

    .sub-menu li:last-of-type {
      border-radius: 0 0 var(--radius) var(--radius);
      border-bottom: none;
    }

    .sub-menu a {
      display: block;
      padding: 0.5rem 1rem;
      transition: color 0.3s ease;
    }

    .sub-menu li:hover {
      background-color: var(--primary);
    }

    .sub-menu li:hover a {
      color: var(--white);
    }

    .li-with-sub-menu:hover .sub-menu {
      opacity: 1;
      visibility: visible;
      transform: translateX(50%) translateY(0px);
    }

    /* elimina la imágen de fondo del menú en mobile */
    img {
      display: none;
    }

    /* elimina la máscara del menú en mobile */
    .mask::after {
      display: none;
    }

    .call {
      border: 1px solid var(--wa);
      border-radius: var(--radius-l);
      padding: 0.3rem 1rem;
      font-size: var(--fs-sm);
      color: var(--wa);
      display: flex;
      gap: 0.5rem;
      text-transform: capitalize;
      background-color: var(--white);
      transition:
        background-color 0.3s ease,
        color 0.3s ease;
    }

    .call:hover {
      background-color: var(--wa-dark);
      color: var(--white) !important;
    }
  }
</style>
