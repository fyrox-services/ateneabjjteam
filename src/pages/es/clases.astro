---
import CardsServices from "@/components/CardsServices.astro";
import HeadingDescription from "@/components/HeadingDescription.astro";
import HeadingH2 from "@/components/HeadingH2.astro";
import Hero from "@/components/Hero.astro";
import Section from "@/components/Section.astro";
import { programs, mainClasses } from "@/data/classes";
import Layout from "@/layouts/Layout.astro";
---

<Layout>
  <Hero h1="clases" tagline="Todas nuestras clases y programas" />

  <Section class="wrapper">
    <HeadingH2>clases principales</HeadingH2>
    <HeadingDescription>
      Lorem ipsum dolor sit amet consectetur adipisicing elit. Velit commodi
      libero doloremque, voluptate dolorem nemo delectus architecto accusantium
      omnis nobis placeat quia inventore voluptas alias animi! Consequatur rem
      at labore.
    </HeadingDescription>
    <CardsServices cards={mainClasses} style="classes" />
  </Section>

  <Section class="wrapper">
    <HeadingH2>programas</HeadingH2>
    <HeadingDescription>
      Lorem ipsum dolor sit amet consectetur adipisicing elit. Velit commodi
      libero doloremque, voluptate dolorem nemo delectus architecto accusantium
      omnis nobis placeat quia inventore voluptas alias animi! Consequatur rem
      at labore.
    </HeadingDescription>
    <CardsServices cards={programs} style="programs" />
  </Section>
</Layout>

<style>
  .hero {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: center;
  }

  h1 {
    color: var(--primary);
    font-family: var(--ff-heading);
    font-size: var(--fs-4xl);
    text-align: center;
    border-bottom: 1px solid var(--third);
    width: fit-content;
    margin-inline: auto;
    padding-inline: 2rem;
  }

  p {
    text-align: center;
    font-size: var(--fs-md);
  }
</style>
