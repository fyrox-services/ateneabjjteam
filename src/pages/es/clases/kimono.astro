---
import { kimonoHours } from "@/data/hours";
import { FormOneClass } from "@/components/react/FormOneClass";
import HeadingH2 from "@/components/HeadingH2.astro";
import Layout from "@/layouts/Layout.astro";
import CardsHours from "@/components/CardsHours.astro";
import HeadingDescription from "@/components/HeadingDescription.astro";
import CardsAdv from "@/components/CardsAdv.astro";
import { advsGi } from "@/data/advs";
import Faqs from "@/components/Faqs.astro";
import { giPage } from "@/data/faqs";
import { GLOBAL_DATA } from "@/vars";
import { getEntry } from "astro:content";
import { render } from "astro:content";
import "@/styles/content.css";

const text = await getEntry("seo-texts", "es/clases-de-gi")!;
const { Content } = await render(text);

const metaData = {
  metaTitle: "➤ Clases de Jiu Jitsu con Kimono | Atenea BJJ Team",
  metaDescription:
    "Entrena Jiu-Jitsu con kimono y mejora tu forma física, tu técnica y tu confianza. Clases para todos los niveles y ambiente motivador. Prueba una clase gratuita.",
};

const structuredData = {
  "@context": "https://schema.org",
  "@type": "Service",
  serviceType: "Clases de Jiu Jitsu (Gi)",
  provider: {
    "@type": "SportsActivityLocation",
    name: GLOBAL_DATA.SITE_NAME,
    url: "https://ateneabjjteam.com/",
  },
  areaServed: {
    "@type": "Place",
    address: {
      "@type": "PostalAddress",
      streetAddress: "Calle del Canal de Panamá, 3",
      addressLocality: "Madrid",
      postalCode: "28027",
      addressCountry: "ES",
    },
  },
  description:
    "Entrena Jiu-Jitsu con kimono y mejora tu forma física, tu técnica y tu confianza. Clases para todos los niveles y ambiente motivador. Prueba una clase gratuita.",
  offers: {
    "@type": "Offer",
    name: "Clase de prueba gratuita de Jiu Jitsu con kimono",
    price: "0",
    priceCurrency: "EUR",
    availability: "https://schema.org/InStock",
    url: Astro.url,
  },
};
---

<Layout metaData={metaData}>
  <section class="wrapper above">
    <div class="box-content">
      <h1>clases de jiu jitsu con kimono</h1>
      <p class="tagline">
        Aprende jiu jitsu brasileño paso a paso, de una forma amena y práctica.
      </p>
      <p class="tagline">
        Si buscas un deporte que te ayude a estar en forma y también que te
        ofrezca herramientas para tu defensa personal, es posible que te
        interese venir a nuestras clases, <strong
          >reserva un primer entrenamiento de prueba gratis.</strong
        >
      </p>
    </div>

    <div class="box-form">
      <FormOneClass
        hours="gi"
        client:visible
        style="OneClass"
        header={{
          h2: "Reserva tu clase de prueba gratis",
          tagline: "te contactaremos para acordar el día y resolver dudas ",
        }}
      />
    </div>
  </section>

  <section class="wrapper mt-6">
    <HeadingH2 color="blue">horarios de Gi (kimono)</HeadingH2>
    <HeadingDescription
      >Aquí están todas las clases de kimono ordenadas por día, incluyendo las
      de competición y las sesiones de Open Mat.</HeadingDescription
    >
    <CardsHours kind="adult" hours={kimonoHours} />
  </section>
  <section class="wrapper mt-6">
    <HeadingH2 color="blue">beneficios del Gi</HeadingH2>
    <HeadingDescription
      >El jiu jitsu tiene 2 modalidades, Gi (con kimono) y NoGi (sin kimono),
      estas son las ventajas del Gi.</HeadingDescription
    >
    <CardsAdv grid={3} cards={advsGi} />
  </section>

  <section class="wrapper-max content-body mt-6">
    <Content />
  </section>

  <div class="wrapper-max mt-3">
    <a href="#reservar" class="btn">Reservar clase gratuita</a>
  </div>

  <section class="wrapper-max mt-6">
    <HeadingH2 color="blue"
      >preguntas frecuentas sobre el jiu jitsu con kimono</HeadingH2
    >
    <Faqs faqs={giPage} />
  </section>

  <script
    is:inline
    type="application/ld+json"
    set:html={JSON.stringify(structuredData)}
  />
</Layout>

<style>
  .above {
    display: flex;
    flex-direction: column;
  }

  .box-content {
    margin-top: 2rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  h1 {
    font-family: var(--ff-heading);
    line-height: 1;
    font-size: var(--fs-3xl);
  }

  h1 span {
    display: block;
  }

  @media (min-width: 1024px) {
    .box-form {
      flex: 0 0 40%;
    }

    .box-content {
      margin-top: 8rem;
    }

    h1 {
      font-family: var(--ff-heading);
      font-size: var(--fs-4xl);
    }

    .tagline {
      font-size: var(--fs-l);
    }

    .above {
      flex-direction: row;
      gap: 3rem;
      justify-content: space-between;
    }
  }
</style>
