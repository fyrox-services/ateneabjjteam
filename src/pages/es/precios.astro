---
import BtnMainCta from "@/components/BtnMainCta.astro";
import HeadingDescription from "@/components/HeadingDescription.astro";
import HeadingH2 from "@/components/HeadingH2.astro";
import Hero from "@/components/Hero.astro";
import Section from "@/components/Section.astro";
import TablePricing from "@/components/TablePricing.astro";
import { kids, mainClasses, oneTime, privateSessions } from "@/data/pricing";
import Layout from "@/layouts/Layout.astro";

const metaData = {
  metaTitle: "Precios",
  metaDescription:
    "Consulta nuestras tarifas para clases mensuales y puntuales.",
  ogImage: "TODO",
};
---

<Layout metaData={metaData}>
  <Hero
    h1="precios"
    tagline="nuestras tarifas para clases mensuales y puntuales"
  />

  <Section class="wrapper">
    <HeadingH2>solicita tu clase de prueba</HeadingH2>

    <HeadingDescription>
      Descubre todas nuestras opciones de abonos: desde planes mensuales
      ilimitados hasta clases sueltas, para que elijas la opción que mejor se
      adapte a ti. Sin matrícula ni compromiso de permanencia.
    </HeadingDescription>

    <div class="center-content mt-3">
      <BtnMainCta />
    </div>

    <div class="mt-6">
      <HeadingH2>adultos</HeadingH2>
      <TablePricing plans={mainClasses} />
    </div>
    <div class="mt-6">
      <HeadingH2>niños</HeadingH2>
      <TablePricing plans={kids} />
    </div>
    <div class="mt-6">
      <HeadingH2>abonos puntuales</HeadingH2>
      <TablePricing plans={oneTime} />
    </div>
    <div class="mt-6">
      <HeadingH2>sesiones privadas</HeadingH2>
      <TablePricing plans={privateSessions} />
    </div>
  </Section>
</Layout>
